    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'myrt'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=myrt",
                    "--package=myrt"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [
                "models/CornellBox-Original.obj",
                "-p",
                "(0,0.75,3.5)",
                "-t",
                "(0,0.75,0)",
                "-o",
                "${workspaceFolder}/test.png",
                // "--photon-count",
                // "10",
                // "--photon-samples",
                // "1"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'myrt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=myrt",
                    "--package=myrt"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [
                "models/sponza1.obj",
                "-p",
                "(12,3,0.1)",
                "-t",
                "(0,5,0)",
                "-o",
                "${workspaceFolder}/test.png"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}